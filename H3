<html>
     <head>
          <meta charset="UTF-8" />
          <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
          <script>
                $( function() {                
                $('#temp').click( function() {
                  $.get( "http://api.openweathermap.org/data/2.5/weather?q=Krakow&APPID=e0078bc65823bc366870518f9f9d2032", success, "json" );
                } );

                function success( apiWeather ) {
                  var message =  apiWeather.main.temp_min + " K";
                  alert( message );
                }
                
                } );
                       
                </script>
     </head>
     <body>
        <h1>Temperature in Krakow:</h1>
     
        <button id="temp">Press</button>

     </body>
</html>
