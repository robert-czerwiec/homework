//H2.1 d

var button = document.getElementById('mybutton');
       
var Przycisk = {
    name: "Robert",       
    writeName: function(){
         var klik = () =>{ 
            alert(this.name);
        };
        
        button.addEventListener('click', klik.bind(Przycisk));
    }
}

Przycisk.writeName();
